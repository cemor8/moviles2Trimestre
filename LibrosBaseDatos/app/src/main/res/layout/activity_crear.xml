<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <EditText
            android:layout_width="217dp"
            android:layout_height="55dp"
            android:inputType="text"
            android:text="Título"
            android:ems="10"
            android:id="@+id/introducirTitulo" android:layout_marginEnd="105dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/introducirAutor"/>
    <EditText
            android:layout_width="217dp"
            android:layout_height="55dp"
            android:inputType="text"
            android:text="Autor"
            android:ems="10"
            android:id="@+id/introducirAutor" android:layout_marginEnd="105dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="53dp"
            app:layout_constraintBottom_toTopOf="@+id/introducirPaginas"/>
    <EditText
            android:layout_width="217dp"
            android:layout_height="55dp"
            android:inputType="number"
            android:text="Páginas"
            android:ems="10"
            android:id="@+id/introducirPaginas" android:layout_marginEnd="105dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="46dp"
            app:layout_constraintBottom_toTopOf="@+id/introducirFecha"/>
    <EditText
            android:layout_width="217dp"
            android:layout_height="55dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/introducirFecha"
            android:text="Fecha" android:layout_marginEnd="105dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="68dp" app:layout_constraintBottom_toTopOf="@+id/btnCrear"/>
    <Button
            android:text="Crear"
            android:layout_width="159dp"
            android:layout_height="70dp" android:id="@+id/btnCrear"
            android:layout_marginEnd="125dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="114dp"
            android:onClick="crearLibro"/>
</androidx.constraintlayout.widget.ConstraintLayout>