<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/negroPrincipal">

    <EditText
            android:layout_width="223dp"
            android:layout_height="51dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/modificarTitulo" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="185dp" android:hint="Escribe Aqui..." android:textColor="@color/white"
            android:textColorHint="@color/white" android:shadowColor="@color/white"
            android:background="@drawable/edittext_background"/>
    <EditText
            android:layout_width="223dp"
            android:layout_height="51dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/modificarAutor"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/modificarTitulo" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Escribe Aqui..." android:textColor="@color/white"
            android:textColorHint="@color/white" android:background="@drawable/edittext_background"/>
    <EditText
            android:layout_width="223dp"
            android:layout_height="51dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/modificarFecha" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/modificarPag" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="YYYY-MM-DD" android:textColor="@color/white"
            android:textColorHint="@color/white" android:background="@drawable/edittext_background"/>
    <EditText
            android:layout_width="223dp"
            android:layout_height="51dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/modificarPag"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/modificarAutor" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Escribe Aqui..." android:textColor="@color/white"
            android:textColorHint="@color/white" android:background="@drawable/edittext_background"/>
    <TextView
            android:text="Título"
            android:layout_width="113dp"
            android:layout_height="42dp" android:id="@+id/textView2"
            android:textSize="25dp" android:gravity="start" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="188dp" android:textColor="@color/white"/>
    <TextView
            android:text="Autor"
            android:layout_width="113dp"
            android:layout_height="42dp" android:id="@+id/textView4"
            android:textSize="25dp" android:gravity="start" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:textColor="@color/white"/>
    <TextView
            android:text="Páginas"
            android:layout_width="113dp"
            android:layout_height="42dp" android:id="@+id/textView5"
            android:textSize="25dp" android:gravity="start"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:textColor="@color/white"/>
    <TextView
            android:text="Fecha"
            android:layout_width="113dp"
            android:layout_height="42dp" android:id="@+id/textView6"
            android:textSize="25dp" android:gravity="start" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginTop="43dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:textColor="@color/white"/>
    <Button
            android:text="Volver"
            android:layout_width="130dp"
            android:layout_height="65dp" android:id="@+id/button3"
            android:onClick="volver" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="116dp"
            android:backgroundTint="@color/azulPrincipal"/>
    <Button
            android:text="Guardar"
            android:layout_width="130dp"
            android:layout_height="65dp" android:id="@+id/button4"
            android:onClick="guardar" android:layout_marginEnd="40dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="116dp"
            android:backgroundTint="@color/azulPrincipal"/>
</androidx.constraintlayout.widget.ConstraintLayout>