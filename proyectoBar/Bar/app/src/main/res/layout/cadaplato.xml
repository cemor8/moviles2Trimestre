<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cadaplato"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imagenPlato"
        android:layout_width="111dp"
        android:layout_height="94dp"
        android:layout_marginBottom="14dp"
        android:scaleType="fitXY"
        android:src="@drawable/cocacola" />

    <TextView
        android:id="@+id/nombrePlato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Nombre Del Plato"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/precioPlato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Precio del Plato"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnMeterPlato"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/acento"
        android:text="AÃ±adir" />
</LinearLayout>