<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/negroPrincipal">
    <ScrollView
            android:layout_width="386dp"
            android:layout_height="467dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="92dp">

        <LinearLayout
                android:id="@+id/linear_layout_libros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <!-- Los TextViews se agregarán aquí -->
        </LinearLayout>
    </ScrollView>
    <Button
            android:text="Volver"
            android:layout_width="152dp"
            android:layout_height="70dp" android:id="@+id/btnVolverDesdeLista"
            android:onClick="volver"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="64dp"
            android:layout_marginEnd="120dp" app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/azulPrincipal"/>

</androidx.constraintlayout.widget.ConstraintLayout>